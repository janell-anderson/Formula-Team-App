<% include ../../partials/boilerplate %>

<div class="container">
  <div class="home-page">
    <div class="profile">
        <h1><%=driver.name%></h1>
        <img src="<%=driver.img_url%>" width="350" alt="<%=driver.name%>" />
        <h3>Team: <%=driver.nationality%></h3>
        <h3>Country: <%=driver.team%></h3>
        <h3>Driver Car Number: <%=driver.carnum%></h3>

            <form action="/driver/<%=driver.id%>/update" class='put' method="GET">
              <input type="submit" class="editlink" value="Edit">
            </form>
            <br>
            <div class="edit-button">
              <form action="/driver/<%=driver.id%>?_method=DELETE" class='delete' method="POST">
              <input type="submit" value="Delete">
              </form>
            </div>
    </div>
  </div>
</div>
<script src='../../public/js/script.js'></script>
<% include ../../partials/end %>
